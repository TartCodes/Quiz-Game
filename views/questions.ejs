    </form>
    
    <h2>Add your own questions here</h2>

    <!-- This form post is failing because thhere need to be fields where the name matches the fields we have in the question model -->
    <form action="/questions/createQuestion" method='POST'>
        <textarea cols="50" rows = "5" placeholder="Enter your question here" name="questionItem"></textarea>
        <textarea cols="50" rows = "5" placeholder="Enter the answer to your question here" name='answerItem'></textarea>
        <select name="QuestionSetId">
            <% questionSets.forEach( el => { %>
                <option value="<%= el._id %>"><%= el.setName %></option>
             <% }) %>         
        </select>
        <input type="submit">
    </form>

